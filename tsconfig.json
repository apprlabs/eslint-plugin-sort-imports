{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}
